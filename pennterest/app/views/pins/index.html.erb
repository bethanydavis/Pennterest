<p id="notice"><%= notice %></p>

<% if @pins.present? %>
  <% @pins.each do |pin| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <a href="/pins/<%= pin.id %>"><%= image_tag pin.image.url(:medium) %></a
      <div class="caption">
        <h4><%= pin.caption %></h4>
        <p>#<%= pin.category %></p>
      </div>
    </div>
  </div>
  <% end %>
<% else %>
  <h3 class="text-center lead">There are no pins under the #<%= params[:search] %> category.</h3>
<% end %>
